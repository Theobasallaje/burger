<img id="burgerPic" src="/assets/images/burger.png">
<h1>Eat-Da-Burger!</h1>
<div class="bodyContainer">
    <div class="burgers">
        <h2>Waiting to be waiting to be devoured</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}

                <button id="eatButton" class="eat" data-id="{{id}}" data-devoured="{{devoured}}">
                    Devour!
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="addBurgerContainer">
        <h2>Add a Burger</h2>
        <form class="form">
            <div id="addFieldButton">
                <div class="input">
                    <label for="name">Burger Name:</label>
                </div>
                <div>
                    <input type="text" id="name" name="name">
                </div>
                <button classs="input" id="addBurger" type="submit">Add Burger</button>
            </div>
        </form>
    </div>

    <div class="devour">
        <h2>Devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{!-- {{id}} --}}
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>